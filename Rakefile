begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "atrium"
    gemspec.summary = "Instant webserver."
    gemspec.description = "Instant webserver."
    gemspec.email = "hrparmar@gmail.com"
    gemspec.homepage = "http://h10labs.com"
    gemspec.authors = ["Hiten Parmar"]
    gemspec.add_dependency 'thin'
    gemspec.add_dependency 'rack'
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end

